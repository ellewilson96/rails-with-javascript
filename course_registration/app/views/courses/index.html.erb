<h2>This Semester's Courses</h2>
<% @courses.each do |course| %>
    <div class="course_info">
        <h4><%= course.name %> - <%= course.section %> - <%= @students.length %>
        <% if @students.length != 1 %>
        Students
        <% else %>
        Student
        <% end %></h3>
        <a href="#">Course Details</a><br>
        <%= link_to "View Roster for This Course", roster_path(course.id) %><br>
    </h4></div>
  <% end %><br>
  <p><%= link_to "Add New Course for Fall 2018", new_course_path %></p>
</h4>
