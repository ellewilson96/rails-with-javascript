<h4>View Your Courses</h4>
  <% if @rosters.empty? %>
  <h4><p><%= link_to 'Register to Teach a New Course', new_course_path %></p></h4>
  <% else %>
<% @rosters.each do |roster| %>
<div>
<h3><%= roster.course.name %> <%= roster.course.section %></h3>
    <a href="#">View Course Description</a><br>
    <%= roster.course.description %>
    <% end %>
    <h3><%= link_to "Enroll a Student in a Course", enroll_path %><br>
      <%= link_to "View All Students", students_path %></h3>
  </div>
<% end %>
