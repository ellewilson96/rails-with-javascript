<%= render partial: "form", locals: {grade: @grade} %>
 <br>
 <div id="newGrade">
   <h2 id="gradeStudent"></h2>
   <p id="gradeBehavior"></p>
   <p id="gradeScore"></p>
 </div>
 <br>
 <p><%= link_to "Click here", student_grades_path(@grade.student) %> to view all of your current grades.</p>
</div>

<script type="text/javascript" charset="utf-8">
  $(function() {
    $("form#new_grade").submit(function(e) {
      e.preventDefault();
      let values = $(this).serialize();
      let create_grade = $.post("/grades", values);
      create_grade.done(function(data) {
        let grade = data;
        $("#gradeStudent").text(grade.student);
        $("#gradeBehavior").text(grade.behavior);
        $("#gradeScore").text(grade.score});
      });
    });
  });
</script>
