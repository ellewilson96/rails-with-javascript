<h2>Student Profile</h2>

  <h4><%= @student.first_name %> <%= @student.last_name %><br>
    ------------------------------<br>
<p>Enrolled in:</p></h4>
  <ol>
    <li><% @student.courses.each do |course|%>
    <%= course.section %> - <%= course.name%></li>
  </ol>
  </h4>
<% end %>
<h4>  <% if @student.grades.nil? %>
No grades available for <%= @student.first_name %> <%= @student.last_name %>.<br>
    <%= link_to "Add Grades for #{@student.first_name}", new_student_grade_path(@student) %>
  <% else %>
  <%= link_to "View #{@student.first_name}'s Grades", student_grades_path(@student) %><br>
  <%= link_to "Add #{@student.first_name} to a Course", courses_path %>
      <% end %></h4>
<br>
<h3>
<%= link_to "Back to All Students", students_path %><br>
<%= link_to "Back to All Courses", courses_path %></h3>
